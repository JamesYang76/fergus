<%= form_with model: [ @job, @note] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
    <% @note.errors.full_messages_for(:commenter).each do |message| %>
    <div><%= message %></div>
  <% end %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @note.errors.full_messages_for(:body).each do |message| %>
    <div><%= message %></div>
  <% end %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
